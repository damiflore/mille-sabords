{
  "name": "mille-sabords",
  "description": "Web version of a dice game called mille sabords",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/damiflore/mille-sabords"
  },
  "publishConfig": {
    "access": "public"
  },
  "module": "main.js",
  "browser": "dist/systemjs/main.js",
  "type": "module",
  "files": [
    "/dist/",
    "/src/",
    "/main.js"
  ],
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "start-exploring": "node ./script/start-exploring/start-exploring.js",
    "eslint-check": "node ./node_modules/eslint/bin/eslint.js .",
    "test": "node ./script/test/test.js",
    "test-with-coverage": "npm run test -- --coverage",
    "prettier-format": "node ./script/prettier-format/prettier-format.js",
    "prettier-format-stage": "npm run prettier-format -- --staged",
    "prettier-check": "npm run prettier-format -- --dry-run",
    "upload-coverage": "node ./script/upload-coverage/upload-coverage.js",
    "build": "node ./script/build/build.mjs",
    "generate-importmap": "node ./script/importmap/generate-importmap.mjs",
    "generate-lighthouse-report": "node ./script/generate-lighthouse-report/generate-lighthouse-report.js",
    "start": "node ./script/start/start.js",
    "start-dev": "node ./script/start/start-dev.js",
    "postinstall": "npm run generate-importmap",
    "dist": "npm run dist"
  },
  "dependencies": {
    "@jsenv/logger": "4.0.0",
    "@jsenv/server": "6.0.1",
    "@jsenv/pwa": "3.0.7",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "systemjs": "6.8.3"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "7.14.9",
    "@jsenv/assert": "2.2.5",
    "@jsenv/codecov-upload": "3.4.3",
    "@jsenv/core": "17.10.0",
    "@jsenv/eslint-config": "14.0.0",
    "@jsenv/file-size-impact": "7.0.0",
    "@jsenv/filesystem": "2.1.1",
    "@jsenv/importmap-node-module": "2.2.0",
    "@jsenv/lighthouse-score-impact": "2.4.8",
    "@jsenv/prettier-check-project": "5.6.1",
    "eslint": "7.25.0",
    "eslint-plugin-react": "7.23.2",
    "playwright-chromium": "1.10.0",
    "prettier": "2.2.1"
  }
}
