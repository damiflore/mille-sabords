{
  "name": "mille-sabords",
  "description": "Web version of a dice game called mille sabords",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/damiflore/mille-sabords"
  },
  "publishConfig": {
    "access": "public"
  },
  "module": "index.js",
  "browser": "dist/systemjs/main.js",
  "type": "module",
  "imports": {
    "src/": "./src/"
  },
  "files": [
    "/dist/",
    "/src/",
    "/index.js"
  ],
  "scripts": {
    "start-exploring": "node ./script/start-exploring/start-exploring.js",
    "test": "node ./script/test/test.js",
    "test-with-coverage": "npm run test -- --coverage",
    "eslint-check": "node ./node_modules/eslint/bin/eslint.js .",
    "prettier-format": "node --no-warnings ./script/prettier-format/prettier-format.js",
    "prettier-format-stage": "npm run prettier-format -- --staged",
    "prettier-check": "npm run prettier-format -- --dry-run",
    "upload-coverage": "node ./script/upload-coverage/upload-coverage.js",
    "generate-systemjs-bundle": "node ./script/generate-systemjs-bundle/generate-systemjs-bundle.js",
    "generate-import-map": "node ./script/generate-import-map/generate-import-map.js",
    "install-git-hooks": "node ./script/install-git-hooks/install-git-hooks.js",
    "generate-lighthouse-report": "node ./script/generate-lighthouse-report/generate-lighthouse-report.js",
    "build": "npm run dist",
    "start": "node ./script/start/start.js",
    "postinstall": "npm run generate-import-map && npm run install-git-hooks",
    "dist": "npm run generate-systemjs-bundle"
  },
  "engines": {
    "node": "13.x"
  },
  "dependencies": {
    "@jsenv/logger": "3.3.1",
    "@jsenv/server": "2.4.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "systemjs": "6.3.2"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "7.9.4",
    "@jsenv/assert": "2.1.0",
    "@jsenv/codecov-upload": "3.4.0",
    "@jsenv/core": "13.1.3",
    "@jsenv/eslint-config": "12.4.1",
    "@jsenv/git-hooks": "1.3.3",
    "@jsenv/github-pull-request-filesize-impact": "3.0.3",
    "@jsenv/node-module-import-map": "11.1.1",
    "@jsenv/prettier-check-project": "5.6.0",
    "eslint": "7.0.0",
    "playwright-chromium": "1.0.2",
    "prettier": "2.0.5"
  }
}
