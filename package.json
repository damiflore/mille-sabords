{
  "name": "mille-sabords",
  "description": "Web version of a dice game called mille sabords",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/damiflore/mille-sabords"
  },
  "publishConfig": {
    "access": "public"
  },
  "module": "index.js",
  "browser": "dist/global/main.js",
  "main": "dist/commonjs/main.js",
  "imports": {
    "src/": "./src/"
  },
  "files": [
    "/dist/",
    "/src/",
    "/index.js"
  ],
  "scripts": {
    "start-exploring": "node ./script/start-exploring/start-exploring.js",
    "test": "node ./script/test/test.js",
    "test-with-coverage": "node ./script/test/test.js --coverage",
    "eslint-check": "eslint .",
    "prettier-check": "node ./script/prettier-check/prettier-check.js",
    "upload-coverage": "node ./script/upload-coverage/upload-coverage.js",
    "generate-global-bundle": "node ./script/generate-global-bundle/generate-global-bundle.js",
    "generate-import-map": "node ./script/generate-import-map/generate-import-map.js",
    "generate-lighthouse-report": "node ./script/generate-lighthouse-report/generate-lighthouse-report.js",
    "build": "npm run dist",
    "start": "node ./script/start/start.js",
    "postinstall": "npm run generate-import-map",
    "dist": "npm run clean && npm run generate-global-bundle",
    "clean": "rimraf ./client/global-bundle && rimraf coverage",
    "reinstall": "npm run clean && rimraf node_modules && npm install"
  },
  "engines": {
    "node": "12.x"
  },
  "dependencies": {
    "@jsenv/server": "1.2.0",
    "react": "16.9.0",
    "react-dom": "16.9.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "7.3.0",
    "@jsenv/assert": "1.1.1",
    "@jsenv/codecov-upload": "3.0.0",
    "@jsenv/core": "10.3.0",
    "@jsenv/eslint-config": "12.0.0",
    "@jsenv/github-pull-request-filesize-impact": "1.2.0",
    "@jsenv/node-module-import-map": "9.4.0",
    "@jsenv/prettier-check-project": "4.1.0",
    "@jsenv/prettier-config": "1.1.0",
    "eslint": "6.7.2",
    "node-fetch": "2.6.0",
    "prettier": "1.19.1",
    "rimraf": "3.0.0"
  }
}
